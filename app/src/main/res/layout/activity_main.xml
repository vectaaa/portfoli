<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"

    tools:context=".MainActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="320dp"
    android:background="@drawable/blur">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageview_profile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/piccs"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"

        />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Onuchukwu Victor Ikechukwu"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@+id/imageview_profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"/>
    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile Android Developer at HNG"
        android:textColor="#fff"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"/>
    <TextView
        android:id="@+id/whoiam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/whoiam"
        android:textColor="#cbcbcb"
        android:textAlignment="center"
        android:layout_below="@+id/desc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"/>
</RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="457dp"
        android:layout_marginTop="320dp"
        android:background="#18161a"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/imageView1a"
                    android:src="@drawable/playstore"
                    android:layout_width="21dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="2" />

                <ImageView
                    android:id="@+id/imageView1b"
                    android:layout_width="21dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/github"
                    android:layout_margin="10dp"
                    android:layout_weight="2"/>
                <ImageView
                    android:id="@+id/imageView1c"
                    android:src="@drawable/bitbucket"
                    android:layout_width="21dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="2"/>
                <ImageView
                    android:id="@+id/imageView1d"
                    android:src="@drawable/facebook"
                    android:layout_width="21dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="2"/>

            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/imageView2a"
                    android:src="@drawable/twitter"
                    android:layout_width="21dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="2" />

                <ImageView
                    android:id="@+id/imageView2b"
                    android:layout_width="21dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/instagram"
                    android:layout_margin="10dp"
                    android:layout_weight="2"/>
                <ImageView
                    android:id="@+id/imageView2c"
                    android:src="@drawable/googleplus"
                    android:layout_width="21dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="2"/>
                <ImageView
                    android:id="@+id/imageView2d"
                    android:src="@drawable/youtube"
                    android:layout_width="21dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="2"/>

            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/imageView3a"
                    android:src="@drawable/dribble"
                    android:layout_width="21dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="2" />

                <ImageView
                    android:id="@+id/imageView3b"
                    android:layout_width="21dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/linkden"
                    android:layout_margin="10dp"
                    android:layout_weight="2"/>
                <ImageView
                    android:id="@+id/imageView3c"
                    android:src="@drawable/gmail"
                    android:layout_width="21dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="2"/>
                <ImageView
                    android:id="@+id/imageView3d"
                    android:src="@drawable/whatsapp"
                    android:layout_width="21dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="2"/>

            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/imageView4a"
                    android:src="@drawable/skype"
                    android:layout_width="21dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="2" />

                <ImageView
                    android:id="@+id/imageView4b"
                    android:layout_width="21dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/google"
                    android:layout_margin="10dp"
                    android:layout_weight="2"/>
                <ImageView
                    android:id="@+id/imageView4c"
                    android:src="@drawable/android"
                    android:layout_width="21dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="2"/>
                <ImageView
                    android:id="@+id/imageView4d"
                    android:src="@drawable/website"
                    android:layout_width="21dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="2"/>

            </LinearLayout>

        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>



</RelativeLayout>
